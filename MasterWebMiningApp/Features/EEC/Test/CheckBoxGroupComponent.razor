<div class="@CustomCssClass mb-4">
    <p class="fw-bold">@($"{Number}.") @Question.QuestionText</p>
    @foreach(Answer answer in Question.Answers)
    {
        <div class="form-check">
            <InputCheckbox class="form-check-input"
                           @bind-Value="answer.IsChecked" />
            <label class="form-check-label">
                @answer.AnswerText
            </label>
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired] public int Number { get; set; }
    [Parameter, EditorRequired] public Question Question { get; set; }
    [Parameter, EditorRequired] public string CustomCssClass { get; set; }
}
