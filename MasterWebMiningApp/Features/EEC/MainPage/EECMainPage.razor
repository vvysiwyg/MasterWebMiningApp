            },
            new ContentElement()
            {
                Header = "Практическое задание 3",
                Body = "Нужно создать решение по обработке заявок, включающее в себя: представление и поисковый запрос",
                URL = "/eec/ex3"
            }
        };
        return base.OnInitializedAsync();
    }
}
